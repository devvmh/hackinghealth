body {
  background-image: url(<%= asset_path('concrete.png') %>);
  color: rgba(50,50,50,0.8);
}

.tab-container {
    padding-bottom: 1em;

    .tab {
        cursor: pointer;
        float: left;
        margin-right: 1em;

        &:hover {
            font-weight: 600;
            text-decoration: underline;
        }
    }
}

.container {
  clear: both;
}

.container.archive {
  .video {
    float: left;
    padding: 1em;
  }
}

.container.chatroom {
  position: relative;

  .local {
    width: 100%;   
  }

  $remote_video_padding: 2em;
  $record_button_size: 6em;
  $remote_video_size: 12em;

  .record {
    cursor: pointer;
    display: inline-block;
    position: absolute;
    top: $remote_video_padding;
    right: $remote_video_padding;
    height: $record_button_size;
    width: $record_button_size;
  }

  .remotes {
    position: absolute;
    top: $remote_video_padding + $record_button_size;
    right: $remote_video_padding;
    width: $remote_video_size;
    height: auto;

    .videoContainer {
      padding-top: $remote_video_padding;
      width: $remote_video_size;
      height: $remote_video_size;

      video {
        width: $remote_video_size !important;
        height: $remote_video_size !important;
      }
    }
  }
}
