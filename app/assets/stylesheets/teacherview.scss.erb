.tab-container {
    padding-bottom: 1em;

    .tab {
        cursor: pointer;
        float: left;
        margin-right: 1em;

        &:hover {
            font-weight: 600;
            text-decoration: underline;
        }
    }
}

.container {
  clear: both;
}

.upload-video {
    margin: auto;
    width: 20%;
    height: 10em;
    vertical-align: middle;
    border: 1px solid black;

    &.disabled {
        background-color: grey;
    }

    .upload-video-text {
        text-align: center;
        margin: auto auto;
        margin-top: 4.25em;
    }
}

.video {
    float: left;
    padding: 1em;
}


body {
    background-image: url(<%= asset_path('concrete.png') %>);
    color: rgba(50,50,50,0.8);
}


.local {
    width: 100%;   
}

.record {
  cursor: pointer;
  display: inline-block;
}
