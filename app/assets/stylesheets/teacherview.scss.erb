body {
  background-image: url(<%= asset_path('concrete.png') %>);
  color: rgba(50,50,50,0.8);
}

.tab-container {
    padding-bottom: 1em;
    clear: both;

    .tab {
        cursor: pointer;
        display: inline-block;
        margin-right: 1em;

        &:hover {
            font-weight: 600;
            text-decoration: underline;
        }
    }
}

.container {
  clear: both;
}

.container.archive {
  .video {
    float: left;
    padding: 1em;
  }
}

.container.chatroom {
  position: relative;

  .local {
    width: 100%;   
  }

  $remote_video_padding: 2em;
  $record_button_size: 10em;
  $remote_video_size: 12em;
  $record_button_horiz_padding: 2em + ($remote_video_size - $record_button_size) / 2;

  .grey-background {
    position: absolute;
    top: 0;
    right: 0;
    width: $remote_video_padding + $remote_video_size + $remote_video_padding;
    height: 100%;
    /* background-image: url(<%= asset_path('concrete.png') %>); */
    background-color: black;
    opacity: 0.2;
  }

  .record {
    cursor: pointer;
    display: inline-block;
    position: absolute;
    top: $remote_video_padding;
    right: $record_button_horiz_padding - 0.5em; /* hack because image looks weird otherwise */
    height: $record_button_size;
    width: $record_button_size;
  }

  .remotes {
    position: absolute;
    top: $remote_video_padding + $record_button_size;
    right: $remote_video_padding;
    width: $remote_video_size;
    height: auto;

    .videoContainer {
      position: relative;
      padding-top: $remote_video_padding;
      width: $remote_video_size;
      height: $remote_video_size;

      .student-name {
        color: white;
        opacity: 0.8;
        font-weight: bold;
        font-size: large;
        position: absolute;
        top: 1em;
      }

      video {
        max-width: $remote_video_size !important;
        max-height: $remote_video_size !important;
        width: $remote_video_size;
        height: $remote_video_size;
      }
    }
  }
}

.louise {
  display: none;
  width: 100%;
}

.uploading {
  color: white;
  opacity: 0.8;
  font-weight: bold;
  font-size: large;
  position: absolute;
  bottom: 3em;
}
